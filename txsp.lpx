[MitM]
hostname = vv.video.qq.com


const url = $request.url;
const header = $request.headers;
const isQQVideo = url.includes("video.qq.com");

if (isQQVideo) {
    // 假设有以下参数从用户输入（类似网易云音乐的处理方式）
    const cookie = $argument?.Cookie;
    const userAgent = $argument?.UserAgent;

    // 检查必要的参数是否存在
    if (!cookie || !userAgent) {
        console.log("参数缺失信息：");
        if (!cookie) console.log("❌ Cookie 参数缺失");
        if (!userAgent) console.log("❌ UserAgent 参数缺失");

        // 提示用户缺失参数
        $notification.post(
            "腾讯视频遇到问题",
            "参数缺失",
            "请在插件内填入会员数据"
        );
        $done({});
    } else {
        // 修改请求头中的字段
        header["cookie"] = cookie;
        header["user-agent"] = userAgent;

        // 输出日志信息
        console.log("✅ 腾讯视频会员已解锁 🎉");

        // 返回修改后的请求头
        $done({ headers: header });
    }
} else {
    // 如果请求不是来自 video.qq.com，直接结束
    $done({});
}
